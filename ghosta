-- Obfuscador utilitário
local e,s,o,r,a,c,d,l,u = string.byte,string.char,{},setmetatable,{},table.insert,{},getfenv,setfenv,getfenv

-- Fragmentador
local function ƒ(f)return function(...)return f(...)end end

-- Encoder de string
local function 𝔼(str)local out=""for i=1,#str do out=out.."\\"..e(str,i)end;return out end

-- Decoder
local function 𝕌(encoded)local t={}for byte in encoded:gmatch("\\(%d+)")do r=#t+1;t[r]=s(tonumber(byte))end;return table.concat(t)end

-- Variável dinâmica
local function 𝓋(name,val)_ENV[name]=val end

-- Encode de serviços
local function 𝕊(v)local out=""for i=1,#v do local c=e(v,i)c=c~13;out=out.."\\"..c end;return out end
local function 𝕊𝕕(v)local out=""for b in v:gmatch("\\(%d+)")do out=out..s(tonumber(b)~13)end;return out end

-- Encode de serviços conhecidos
local 𝕟 = {
𝕊("game"),𝕊("Players"),𝕊("RunService"),𝕊("HttpService"),𝕊("CoreGui"),𝕊("LocalPlayer"),
𝕊("GetService"),𝕊("Instance"),𝕊("new"),𝕊("pcall"),𝕊("hookmetamethod"),
𝕊("__namecall"),𝕊("__index"),𝕊("wait"),𝕊("task"),𝕊("loadstring")
}

-- Obter serviços dinamicamente
local function 𝕘(name)local n=𝕊𝕕(name)return game:GetService(n)end

-- Detectar anticheat (básico)
local detectAC = false
pcall(function()
	r.__metatable="locked"
	local f = ƒ(function(...)end)
	local hook = hookmetamethod or nil
	if hook then
		local mt = getrawmetatable(game)
		if mt then
			local old = mt.__namecall
			setreadonly(mt,false)
			mt.__namecall = function(...) return old(...) end
			setreadonly(mt,true)
			detectAC = true
		end
	end
end)

-- Ativar camuflagem fantasma se detectar AC
if detectAC then
	warn("🛡️ Anticheat detectado. Ativando Ghost Mode.")
	while true do task.wait(9e9) end
end

-- Função para checar personagem
local function 𝒸𝒽𝓀𝒑()
	local p=𝕘(𝕟[2]).LocalPlayer
	if not p or not p.Character then return nil end
	local c=p.Character
	if c:FindFirstChild("Humanoid") then
		return c
	end
	return nil
end

-- Criação de membros falsos
local function 𝓯𝓪𝓴𝓮(what)
	local c=𝒸𝒽𝓀𝒑()if not c then return end
	local limbs={"RightHand","LeftHand","RightFoot","LeftFoot"}
	for _,limb in pairs(limbs) do
		if what=="arms" and limb:find("Hand") or what=="legs" and limb:find("Foot") then
			local l=c:FindFirstChild(limb)
			if l then
				local fake=Instance.new("Part",c)
				fake.Name="Fake"..limb
				fake.Size=l.Size
				fake.Position=l.Position+Vector3.new(0,3,0)
				fake.Transparency=1
				fake.CanCollide=false
				fake.Anchored=true
			end
		end
	end
end

-- Sistema Reach universal
local function 𝓻𝓮𝓪𝓬𝓱(amount,what)
	local c=𝒸𝒽𝓀𝒑()if not c then return end
	local limbs={"RightHand","LeftHand","RightFoot","LeftFoot"}
	for _,limb in pairs(limbs) do
		if what=="arms" and limb:find("Hand") or what=="legs" and limb:find("Foot") then
			local l=c:FindFirstChild(limb)
			if l then
				l.Size=Vector3.new(amount/25,l.Size.Y,l.Size.Z)
			end
		end
	end
end

-- Criar UI oculta
local function 𝓾𝓲()
	local sg=Instance.new("ScreenGui",𝕘(𝕟[5]))
	sg.Name="𝔊𝔥𝔬𝔰𝔱𝔞"
	sg.ResetOnSpawn=false
	sg.Enabled=false

	local frame=Instance.new("Frame",sg)
	frame.Size=UDim2.new(0,300,0,220)
	frame.Position=UDim2.new(0.5,-150,0.5,-110)
	frame.BackgroundColor3=Color3.fromRGB(20,20,20)
	frame.BorderSizePixel=0

	local tabs={"Reach","Fake","Kill"}
	local funcs={function()
		𝓻𝓮𝓪𝓬𝓱(80,"arms")
		𝓻𝓮𝓪𝓬𝓱(80,"legs")
	end,function()
		𝓯𝓪𝓴𝓮("arms")
		𝓯𝓪𝓴𝓮("legs")
	end,function()
		sg.Enabled=false
	end}

	for i,tab in pairs(tabs)do
		local btn=Instance.new("TextButton",frame)
		btn.Size=UDim2.new(0,90,0,40)
		btn.Position=UDim2.new(0,(i-1)*100,0,10)
		btn.Text=tab
		btn.BackgroundColor3=Color3.fromRGB(40,40,40)
		btn.TextColor3=Color3.new(1,1,1)
		btn.MouseButton1Click:Connect(funcs[i])
	end

	local open=Instance.new("TextButton",𝕘(𝕟[5]))
	open.Size=UDim2.new(0,100,0,40)
	open.Position=UDim2.new(0,10,1,-60)
	open.Text="Abrir UI"
	open.BackgroundColor3=Color3.new(0.2,0.2,0.2)
	open.TextColor3=Color3.new(1,1,1)
	open.MouseButton1Click:Connect(function()
		sg.Enabled=true
	end)
end

𝓾𝓲()
